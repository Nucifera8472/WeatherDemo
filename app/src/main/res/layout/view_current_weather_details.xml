<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dailyCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sunupIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Thunderstorm with heavy drizzle" />


    <ImageView
        android:id="@+id/dailyConditionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/dailyCondition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dailyCondition"
        tools:srcCompat="@drawable/storm"
        app:tint="@color/secondaryColor" />

    <ImageView
        android:id="@+id/sunupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sunupTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sunupTime"
        app:srcCompat="@drawable/weather_sunset_up"
        app:tint="@color/secondaryColor" />

    <ImageView
        android:id="@+id/sunDownIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sunDownTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sunDownTime"
        app:srcCompat="@drawable/weather_sunset_down"
        app:tint="@color/secondaryColor" />

    <TextView
        android:id="@+id/sunupTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sunupIcon"
        app:layout_constraintTop_toBottomOf="@+id/dailyCondition"
        tools:text="06:30" />

    <TextView
        android:id="@+id/sunDownTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sunDownIcon"
        app:layout_constraintTop_toBottomOf="@+id/sunupTime"
        tools:text="19:02" />


    <TextView
        android:id="@+id/maxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/maxIcon"
        app:layout_constraintTop_toTopOf="@+id/sunupTime"
        tools:text="20°C" />

    <TextView
        android:id="@+id/minTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/minIcon"
        app:layout_constraintTop_toTopOf="@+id/sunDownTime"
        tools:text="10°C" />

    <ImageView
        android:id="@+id/minIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron_double_down"
        app:layout_constraintBottom_toBottomOf="@id/minTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minTemperature"
        app:tint="@color/secondaryColor" />

    <ImageView
        android:id="@+id/maxIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron_double_up"
        app:tint="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="@id/maxTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/maxTemperature" />

    <TextView
        android:id="@+id/precipitationProbability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/maxTemperature"
        app:layout_constraintStart_toEndOf="@+id/precipitationIcon"
        app:layout_constraintTop_toTopOf="@+id/sunupTime"
        tools:text="40%" />

    <ImageView
        android:id="@+id/precipitationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/precipitationProbability"
        app:layout_constraintEnd_toStartOf="@id/precipitationProbability"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/sunupTime"
        app:layout_constraintTop_toTopOf="@+id/precipitationProbability"
        app:srcCompat="@drawable/weather_snowy_rainy"
        app:tint="@color/secondaryColor" />

    <TextView
        android:id="@+id/precipitationAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/precipitationProbability"
        app:layout_constraintTop_toTopOf="@+id/sunDownTime"
        tools:text="2mm" />

    <ImageView
        android:id="@+id/precipitationAmountIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/precipitationAmount"
        app:layout_constraintEnd_toStartOf="@id/precipitationAmount"
        app:layout_constraintTop_toTopOf="@+id/precipitationAmount"
        app:srcCompat="@drawable/water_outline"
        app:tint="@color/secondaryColor" />




</androidx.constraintlayout.widget.ConstraintLayout>
