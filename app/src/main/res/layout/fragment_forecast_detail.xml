<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forecastdetail.ForecastDetailFragment"
    android:padding="16dp"

    >


    <TextView
        android:id="@+id/maxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/maxIcon"
        app:layout_constraintTop_toBottomOf="@+id/currentWeatherIcon"
        tools:text="20°C" />

    <TextView
        android:id="@+id/minTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/minIcon"
        app:layout_constraintTop_toBottomOf="@+id/maxTemperature"
        tools:text="10°C" />

    <ImageView
        android:id="@+id/minIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron_double_down"
        app:layout_constraintBottom_toBottomOf="@id/minTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minTemperature"
        app:tint="@color/secondaryColor" />

    <ImageView
        android:id="@+id/maxIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chevron_double_up"
        app:layout_constraintBottom_toBottomOf="@id/maxTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/maxTemperature"
        app:tint="@color/secondaryColor"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/precipitationProbability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/minIcon"
        app:layout_constraintTop_toBottomOf="@+id/minTemperature"
        tools:text="40%" />

    <ImageView
        android:id="@+id/precipitationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/precipitationProbability"
        app:layout_constraintEnd_toStartOf="@+id/precipitationProbability"
        app:layout_constraintTop_toTopOf="@+id/precipitationProbability"
        app:srcCompat="@drawable/weather_snowy_rainy"
        app:tint="@color/secondaryColor" />

    <TextView
        android:id="@+id/precipitationAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precipitationProbability"
        tools:text="2mm" />

    <ImageView
        android:id="@+id/precipitationAmountIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/precipitationAmount"
        app:layout_constraintEnd_toStartOf="@id/precipitationAmount"
        app:layout_constraintTop_toTopOf="@+id/precipitationAmount"
        app:srcCompat="@drawable/water_outline"
        app:tint="@color/secondaryColor" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/currentWeatherIcon"
        app:layout_constraintTop_toTopOf="@+id/currentWeatherIcon"
        tools:text="monday" />

